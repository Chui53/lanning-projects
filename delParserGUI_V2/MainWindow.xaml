<Window x:Class="delParserGUI_V2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:delParserGUI_V2"
        mc:Ignorable="d"
        Title="delParserGUI" Height="450" Width="600">
    <Grid>
        <Button x:Name="parseButton" Content="Parse" HorizontalAlignment="Left" Margin="500,371,0,0" VerticalAlignment="Top" Width="75" Click="parseClick" IsEnabled="{Binding ElementName=pathList, Path=SelectedItems.Count}"/>
        <ListBox x:Name="pathList" SelectionMode="Multiple" HorizontalAlignment="Left" Height="384" Margin="10,26,0,0" VerticalAlignment="Top" Width="476"/>
        <Label Content="Select Files to Parse (.txt/.xml)" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Height="26" Width="167"/>
        <Button x:Name="selAllButton" Content="Select All" HorizontalAlignment="Left" Margin="500,323,0,0" VerticalAlignment="Top" Width="75" Click="selAllClick"/>
        <Button x:Name="dselAllButton" Content="Deselect All" HorizontalAlignment="Left" Margin="500,347,0,0" VerticalAlignment="Top" Width="75" Click="dselAllClick"/>

    </Grid>
</Window>
