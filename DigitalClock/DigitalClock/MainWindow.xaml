<Window x:Name="ClockFace" x:Class="DigitalClock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DigitalClock"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="500">
    <Grid>
        <TextBlock x:Name="Time" TextAlignment="Center" Margin="10,0,10,0" TextWrapping="Wrap" Text="00:00:00" VerticalAlignment="Top" Height="150" FontSize="112"/>
        <Button x:Name="USEastern" Content="US EASTERN" HorizontalAlignment="Left" Margin="10,165,0,0" VerticalAlignment="Top" Width="100" Height="45" Click="Eastern_Click"/>
        <Button x:Name="Foreign" Content="JAPAN" Margin="0,165,10,0" VerticalAlignment="Top" Width="100" Height="45" HorizontalAlignment="Right" Click="Foreign_Click"/>
        <Button x:Name="USCentral" Content="US CENTRAL" HorizontalAlignment="Left" Margin="133,165,0,0" VerticalAlignment="Top" Width="100" Height="45" Click="Central_Click"/>
        <Button x:Name="USWestern" Content="US WESTERN" Margin="0,165,133,0" VerticalAlignment="Top" Width="100" Height="45" HorizontalAlignment="Right" Click="Western_Click"/>

    </Grid>
</Window>
